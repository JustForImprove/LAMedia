<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/material_process_video_tabs"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_weight="1"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/material_process_audio_tabs"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/material_process_video_tabs"
        app:layout_constraintVertical_weight="1"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/material_process_image_tabs"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/material_process_audio_tabs"
        app:layout_constraintVertical_weight="1"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/material_process_text_tabs"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/material_process_image_tabs"
        app:layout_constraintVertical_weight="1"/>



</androidx.constraintlayout.widget.ConstraintLayout>